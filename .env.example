# WebShield Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=webshield
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=10
DB_DISABLE_POOL=0

# Alternative: Use DB_URL for consolidated configuration
# DB_URL=mysql://user:password@host:port/database

# ============================================
# API KEYS & EXTERNAL SERVICES
# ============================================
VT_API_KEY=your_virustotal_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# HuggingFace API Key for LLM-based threat analysis
# Get your key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Groq API Key for real-time LLM explanations
# Get your key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here
# OpenAI-compatible base URL for Groq
GROQ_API_BASE=https://api.groq.com/openai/v1
# Model for real-time explanations (fast)
GROQ_EXPLANATION_MODEL=llama-3.1-8b-instant
# Timeout for Groq explanation requests (seconds)
GROQ_REQUEST_TIMEOUT_SECONDS=2.5

# ============================================
# SECURITY CONFIGURATION
# ============================================
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRATION_HOURS=24
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=4
ENVIRONMENT=production

# ============================================
# PERFORMANCE & OPTIMIZATION
# ============================================
CACHE_TTL=300
CACHE_MAX_SIZE=1000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================
# SCAN CONFIGURATION
# ============================================
SCAN_SSL_TIMEOUT=3.0
SCAN_CONTENT_TIMEOUT=5.0
SCAN_VIRUSTOTAL_TIMEOUT=2.0
SCAN_CONTENT_MAX_BYTES=5120

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=WARNING
ENABLE_ACCESS_LOGS=false
ENABLE_DOCS=false
MONITOR_CHECK_INTERVAL=30

# ============================================
# REDIS (OPTIONAL - FOR CACHING)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# EMAIL (OPTIONAL - FOR NOTIFICATIONS)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@webshield.com

# ============================================
# ADVANCED FEATURES
# ============================================
ENABLE_ML_FEEDBACK_LOOP=true
ENABLE_THREAT_INTELLIGENCE=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=true
